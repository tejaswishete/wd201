  <style>
    /* Styles for the titles */
    h5 {
      font-size: 1.2rem;
      color: #333; /* Dark gray text color */
      margin-bottom: 10px;
    }

    /* Styles for the count badges */
    .count-badge {
      background-color: #007BFF; /* Blue background color */
      color: #fff; /* White text color */
      padding: 5px 10px;
      border-radius: 10px;
      font-weight: bold;
      margin-right: 10px;
      margin-bottom: 10px;
    }

    /* Styles for the list items */
    .Todo-Item {
      background-color: #f5f5f5; /* Light gray background color */
      border: 1px solid #ddd; /* Light gray border */
      border-radius: 5px;
      margin: 5px 0;
      padding: 10px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .Todo-Item:hover {
      background-color: #007BFF; /* Blue background color on hover */
      color: #fff; /* White text color on hover */
    }

    /* Styles for the trash icon */
    .trash-icon {
      display: inline-block;
      margin-left: 10px;
      color: #ff0000; /* Red color for the trash icon */
      cursor: pointer;
    }
  </style>

